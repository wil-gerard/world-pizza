<%- include('partials/head') -%> <%- include('partials/header') -%>
<div class="contain-profile">
<div class="profile-greeting">

  <h2>Hi <%= user.userName %>!</h2>
  <div class="profile-image"><img src="<%= user.profilePic %>" alt=""></div>

  <form
    action="/post/profileUpload"
    method="POST"
    enctype="multipart/form-data"
    id="profile-pic-upload-form"
  >
    <input type="file" name="file">
    <button class="upload-button">Upload</button>
  </form>
</div>


  <div class="form-container">
    <h2>Post a Pizza Pic</h2>
    <!-- form for a new post - have never used enctype before - something else cool to research -->
    <form
      action="/post/create-post"
      enctype="multipart/form-data"
      method="POST"
      id="new-post-form"
    >
      <div id="form-title" class="form-section">
        <label for="post-title"> Pizza Title </label>
        <input type="text" name="title" id="post-title" autocomplete="off" />
      </div>
      <div id="form-caption" class="form-section">
        <label for="post-caption"> Pizza Caption </label>
        <textarea name="caption" id="post-caption"> </textarea>
      </div>
      <div id="form-file" class="form-section">
        <label for="file"> Pizza Pic </label>
        <input type="file" name="file" id="file" />
      </div>
      <div id="" class="form-section">
        <button id="post-button">Post</button>
      </div>
    </form>
  </div>
</div>
<div class="grid-contain"><%- include('partials/pizzaGrid') %></div>
<%- include('partials/footer') -%>
