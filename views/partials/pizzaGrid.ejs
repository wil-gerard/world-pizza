<div class="grid">
  <% posts.forEach(post => { %>
  <div class="grid-item">
    <a href="/post/<%= post._id%>">
      <img src="<%= post.image %> " alt="" />
    </a>
    <div class="post-footer">
      <div class="post-info-container">
        <h5><%= post.title %></h5>

        <h5>
          <%= new Date(post.createdAt).toLocaleString('en', {weekday: "short",
          month: "short", day: 'numeric' }) %>
        </h5>
      </div>

      <% if (feed) { %>
      <div class="post-info-container">
        <h5>ğŸ• : <%= post.likes %></h5>

        <h5>ğŸš® : <%= post.dislikes %></h5>
      </div>
      <% } %>
    </div>
  </div>
  <% }) %>
</div>

<!-- if the user hasn't posted anything then yell at them -->
<% if(posts.length < 1) { %>
<p>you haven't posted anything yet!</p>
<% } %>
